#user-profile-modal.modal.fade(role='dialog')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal') &times;
        h4.modal-title Tài khoản cá nhân
      .modal-body
        ul.nav.nav-tabs
          li.active
            a(data-toggle='tab', href='#seting-profile') Cài đặt chung
          li
            a#link-to-password-profile(data-toggle='tab', href='#password-profile') Quản lý mật khẩu
        .tab-content
          #seting-profile.tab-pane.fade.in.active
            .row
              form.form-horizontal(method='post', role='form', action='')
                // left column
                .col-md-3
                  #div-update-avatar.text-center
                    #image-edit-profile
                      img#user-modal-avatar.avatar.img-circle(src=`images/users/${user.avatar}`, alt='avatar')
                    h6 Tải lên một ảnh mới...
                    input#input-change-avatar.form-control(type='file', name='avatar')
                    br
                    #show-button-update-avatar
                // edit form column
                .col-md-9.personal-info
                  .alert.alert-danger.alert-dismissable
                    a.panel-close.close(data-dismiss='alert') &times;
                    |                                             Update user error example.
                    br
                    // <script>openProfileModal();</script>
                  .alert.alert-success.alert-dismissable
                    a.panel-close.close(data-dismiss='alert') &times;
                    |                                             Update user success example.
                    br
                    // <script>openProfileModal();</script>
                  if user.local.email
                    h3 Local account.
                  if user.facebook.email
                    h3 Facebook account.
                  if user.google.email
                    h3 Google account.
                  br
                  .form-group
                    label.col-lg-3.control-label Email:
                    .col-lg-8
                      if user.local.email
                        .form-control(disabled='')= user.local.email
                      if user.facebook.email
                        .form-control(disabled='')= user.facebook.email
                      if user.google.email
                        .form-control(disabled='')= user.google.email
                  .form-group
                    label.col-md-3.control-label Username:
                    .col-md-8
                      input#input-change-username.form-control(type='text', name='username', value=user.username)
                  .form-group
                    label.col-lg-3.control-label Giới tính
                    .col-lg-8
                      label.radio-inline.col-lg-2
                        | Nam
                        if user.gender=='male'
                          input(type='radio', name='gender', value='male', checked, required='')
                        else
                          input#input-change-gender-male(type='radio', name='gender', value='male', required='')
                        span.checkmark
                      label.radio-inline.col-lg-2
                        | Nữ
                        if user.gender=='female'
                          input(type='radio', name='gender', value='female', checked, required='')
                        else
                          input#input-change-gender-female(type='radio', name='gender', value='female', required='')
                        span.checkmark
                      label.radio-inline.col-lg-2
                        | Khác
                        if user.gender=='other'
                          input(type='radio', name='gender', value='other', checked, required='')
                        else
                          input#input-change-gender-other(type='radio', name='gender', value='other', required='')
                        span.checkmark
                  .form-group
                    label.col-lg-3.control-label Địa chỉ:
                    .col-lg-8
                      input#input-change-address.form-control(type='text', name='address', value=user.address)
                  .form-group
                    label.col-lg-3.control-label Số điện thoại:
                    .col-lg-8
                      input#input-change-phone.form-control(type='text', name='phone', value=user.phone)
                  .form-group
                    label.col-md-3.control-label
                    .col-md-8
                      input#input-btn-update-user.btn.btn-primary.custom-background-btn-primary(type='button', name='submit', value='Lưu lại')
                      span
                      input#input-btn-cancel-update-user.btn.btn-default.custom-background-btn-reset(type='reset', value='Hủy bỏ')
          #password-profile.tab-pane.fade
            .col-md-9.personal-info
              .alert.alert-danger.alert-dismissable
                a.panel-close.close(data-dismiss='alert') &times;
                |                                     Update password error example
                br
