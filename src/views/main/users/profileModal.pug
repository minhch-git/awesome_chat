                  label.col-md-4.control-label M&#x1EAD;t kh&#x1EA9;u m&#x1EDB;i
                  .col-md-8
                    input.form-control(type='password', name='new_password', placeholder='Enter new password...')
                .form-group
                  label.col-md-4.control-label Nh&#x1EAD;p l&#x1EA1;i m&#x1EAD;t kh&#x1EA9;u m&#x1EDB;i
                  .col-md-8
