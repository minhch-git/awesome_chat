<div class="modal fade" id="user-profile-modal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header"><button class="close" type="button" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Tài khoản cá nhân</h4>
      </div>
      <div class="modal-body">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#seting-profile">Cài đặt chung</a></li>
            <li>
              <a id="link-to-password-profile" data-toggle="tab" href="#password-profile">Quản lý mật khẩu</a>
            </li>
        </ul>
        <div class="tab-content">
          <!-- tab update info user -->
          <div id="seting-profile" class="tab-pane fade in active">
            <div class="row">
              <form class="form-horizontal" method="post" role="form" action="">
                <div class="col-md-3">
                  <div id="div-update-avatar" class="text-center">
                    <div id="image-edit-profile">
                      <img class="avatar img-circle" id="user-modal-avatar" src="images/users/<%= user.avatar %>" alt="avatar" />
                    </div>
                    <h6>Tải lên một ảnh mới...</h6>
                    <input id="input-change-avatar" class="form-control" type='file' name='avatar'>
                    <br />
                    <div id="show-button-update-avatar"></div>
                  </div>
                </div>
                <div class="col-md-9 personal-info">
                  <div class="alert alert-danger alert-dismissable user-modal-alert-error">
                    <a data-dismiss='alert' class="panel-close close">&times;</a>
                    <span>Update user error example.</span><br/>
                  </div>
                  <div class="alert alert-success alert-dismissable user-modal-alert-success">
                    <a class="panel-close close" data-dismiss="alert">&times;</a>
                    <span>Update user success example.</span><br />
                  </div>

                  <% if (user.local.email) { %>
                    <h3>Local account.</h3>
                  <% } %>
                  <% if (user.facebook) { %>
                    <h3>Facebook account.</h3>
                  <% } %>
                  <% if (user.google) { %>
                    <h3> Google account.</h3>
                  <% } %>
                  <br />
                    <div class="form-group">
                        <label for="" class="col-lg-3 control-label"> Email:</label>
                        <div class="col-lg-8">
                            <% if (user.local.email) { %>
                                <div class="form-control" disabled=''> <%=user.local.email %></div>
                            <% } %>
                            <% if (user.facebook) { %>
                                <div class="form-control" disabled=''> <%=user.facebook.email %></div>
                            <% } %>
                            <% if (user.google) { %>
                                <div class="form-control" disabled=''> <%=user.google.email %></div>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-md-3 control-label"> Username:</label>
                        <div class="col-md-8">
                            <input id="input-change-username" class="form-control" type='text' name='username' value="<%= user.username %>" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-md-3 control-label"> Giới tính:</label>
                        <div class="col-md-8">
                            <label for="" class="radio-inline col-lg-2"> Nam 
                                <input type='radio' name='gender' value='male'
                                    id="input-change-gender-male"
                                 <% if (user.gender === 'male') { %>checked <% } %> 
                                >
                                <span class="checkmark"></span>
                            </label>

                            <label for="" class="radio-inline col-lg-2"> Nữ 
                                <input type='radio' name='gender' value='female' 
                                    id="input-change-gender-female"
                                    <% if (user.gender === 'female') { %>checked<% } %>
                                >
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group"><label class="col-lg-3 control-label">Địa chỉ:</label>
                        <div class="col-lg-8">
                            <input value="<%= user.address %>" class="form-control" id="input-change-address" type="text" name="address" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Số điện thoại:</label>
                        <div class="col-lg-8">
                            <input value="<%= user.phone %>" class="form-control" id="input-change-phone" type="text" name="phone" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input class="btn btn-primary custom-background-btn-primary" id="input-btn-update-user" type="button" name="submit" value="Lưu lại" />
                            <span></span>
                            <input class="btn btn-default custom-background-btn-reset" id="input-btn-cancel-update-user" type="reset" value="Hủy bỏ" />
                        </div>
                    </div>
                </div>
              </form>
          </div>
          </div>
          <!-- tab update password -->
          <div class="tab-pane fade" id="password-profile">
            <div class="col-md-9 personal-info"><br />
                <div class="alert alert-danger alert-dismissable user-modal-password-alert-error">
                  <a class="panel-close close" data-dismiss="alert">&times;</a>
                  <span>Update user error example.</span>
                  <br />
                </div>
                <div class="alert alert-success alert-dismissable user-modal-password-alert-success">
                  <a class="panel-close close" data-dismiss="alert">&times;</a>
                  <span>Update user success example.</span>
                  <br />
                </div>
                <h3>Thay đổi mật khẩu</h3><br />
                <form class="form-horizontal" method="post" role="form" action="">
                    <div class="form-group">
                      <label class="col-md-4 control-label">Mật khẩu cũ:</label>
                        <div class="col-md-8">
                          <input class="form-control" id="input-change-current-password" type="password" name="current_password" placeholder="Enter your curent password..." />
                        </div>
                    </div>
                    <div class="form-group">
                      <label class="col-md-4 control-label">Mật khẩu mới:</label>
                        <div class="col-md-8">
                          <input class="form-control" id="input-change-new-password" type="password" name="new_password" placeholder="Enter new password..." />
                        </div>
                    </div>
                    <div class="form-group">
                      <label class="col-md-4 control-label">Nhập lại mật khẩu mới:</label>
                        <div class="col-md-8">
                          <input class="form-control" id="input-confirm-new-password" type="password" name="confirm_new_password" placeholder="Enter confirm new password..." />
                        </div>
                    </div>
                    <div class="form-group">
                      <label class="col-md-4 control-label"></label>
                        <div class="col-md-8">
                          <input class="btn btn-primary custom-background-btn-primary" id="input-btn-update-user-password" type="button" value="Lưu lại" />
                          <span></span>
                          <input class="btn btn-default custom-background-btn-reset" id="input-btn-cancel-update-user-password" type="button" value="Hủy bỏ" />
                        </div>
                    </div>
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>